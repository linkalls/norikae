{
  "name": "norikae-webui",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n SERVER,VITE -c cyan,magenta \"bun run server:dev\" \"vite\"",
    "server:dev": "bun --watch src/server/index.ts",
    "build": "vite build",
    "preview": "cross-env NODE_ENV=production bun src/server/index.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "norikae-api-client": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "tailwindcss": "^4.2.1",
    "typescript": "5.9.3",
    "vite": "^7.3.1"
  }
}
